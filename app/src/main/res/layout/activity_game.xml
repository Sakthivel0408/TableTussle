<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".GameActivity">

    <!-- Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/menu"
                android:src="@drawable/ic_menu"
                app:tint="@color/primary" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/info"
                android:src="@drawable/ic_info"
                app:tint="@color/primary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Player 1 Info -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/player1Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toStartOf="@+id/player2Card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPlayer1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_1"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPlayer1Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/zero"
                android:textColor="@color/primary"
                android:textSize="32sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Player 2 Info -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/player2Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player1Card"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPlayer2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_2"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPlayer2Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/zero"
                android:textColor="@color/secondary"
                android:textSize="32sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Game Board -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gameBoardCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/currentTurnCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Card">

        <GridLayout
            android:id="@+id/gameBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="16dp">

            <!-- Row 1 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_0_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_0_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_0_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <!-- Row 2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_1_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_1_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_1_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <!-- Row 3 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_2_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_2_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell_2_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary"
                android:textSize="48sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/cardStroke"
                app:strokeWidth="2dp" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Current Turn Indicator -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currentTurnCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvCurrentTurn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/player_turn"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
