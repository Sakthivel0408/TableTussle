<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".MainActivity">

    <!-- Profile Button (Top Right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardBackgroundColor="@color/accent_gold"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:layout_gravity="center"
            app:tint="@color/white"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Background Decorative Element -->
    <View
        android:id="@+id/backgroundCircle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/circle_background"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-100dp"/>

    <!-- App Logo/Title Section -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/appTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_tagline"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        android:layout_marginTop="8dp"/>

    <!-- Main Action Buttons Container -->
    <LinearLayout
        android:id="@+id/mainButtonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTagline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <!-- Play Now Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayNow"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/play_now"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/button_primary"
            android:elevation="8dp"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconSize="28dp"
            android:layout_marginBottom="16dp"/>

        <!-- Quick Match Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuickMatch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/quick_match"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/card_background"
            app:strokeColor="@color/accent_gold"
            app:strokeWidth="2dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <!-- Create Room Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateRoom"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/create_room"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/card_background"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <!-- Join Room Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnJoinRoom"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/join_room"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/card_background"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

    <!-- Bottom Navigation Cards -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp">

        <!-- How to Play Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHowToPlay"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/accent_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_help"
                    android:contentDescription="@string/how_to_play"
                    app:tint="@color/text_primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_play"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatistics"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cardBackgroundColor="@color/accent_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:contentDescription="@string/statistics"
                    app:tint="@color/text_primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSettings"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/accent_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:contentDescription="@string/settings"
                    app:tint="@color/text_primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

